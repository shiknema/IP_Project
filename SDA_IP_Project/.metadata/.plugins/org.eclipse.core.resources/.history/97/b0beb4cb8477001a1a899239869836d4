package com.sda;


import static org.junit.Assert.*;

import java.util.ArrayList;

import org.junit.Test;

public class TaskTest {
	Task task = new Task("Task1", "p1", "Done", 2021-12-12);

	void testGetTaskName() throws Exception {
	   // Deck deck = new Deck();//ArrayList<Card> playerFour = new ArrayList<Card>();
		
	    
	    ArrayList<Task> input = new ArrayList<>();
	    input.add(new Task("Task1", "p1", "Done", 2021-12-12));
	    assertEquals("Task1", input.getTaskName());
	}

	@Test
	void testSetTaskName("Task1") {
		 
		    assertEquals("Task1", input.setTaskName());
	}
}
